<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <title>Gestion des Commandes Finalis√©es</title>

    <!-- Google Web Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@400;600&family=Raleway:wght@600;800&display=swap" rel="stylesheet">

    <!-- Icon Font Stylesheet -->
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.4/css/all.css"/>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css" rel="stylesheet">

    <!-- Libraries Stylesheet -->
    <link href="{{ asset('lib/lightbox/css/lightbox.min.css') }}" rel="stylesheet">
    <link href="{{ asset('lib/owlcarousel/assets/owl.carousel.min.css') }}" rel="stylesheet">

    <!-- Customized Bootstrap Stylesheet -->
    <link href="{{ asset('css/bootstrap.min.css') }}" rel="stylesheet">
    <link href="{{ asset('css/style.css') }}" rel="stylesheet">
    <link href="{{ asset('css/sidebar.css') }}" rel="stylesheet">

    <style>
        body {
            font-family: 'Poppins', sans-serif;
        }

        .content-page {
            margin-left: 250px;
            padding: 20px;
        }

        .table-responsive {
            overflow-x: auto;
        }

        .table {
            background: #fff;
            border-radius: 8px;
        }

        .table thead {
            background-color: #343a40;
            color: white;
        }

        .edit-mode {
            display: flex;
            gap: 10px;
        }

        .edit-mode input {
            width: 80px;
        }

        @media (max-width: 768px) {
            .content-page {
                margin-left: 0;
                padding: 10px;
            }
        }
    </style>
</head>

<body>
    {% include 'backoffice/sidebar.html.twig' %}

    <main class="container-fluid content-page">
        <h1 class="my-4 text-center">üìú Gestion Commandes Finalis√©es </h1>

        {% if commandes is empty %}
            <p class="text-center text-muted">Aucune commande finalis√©e trouv√©e.</p>
        {% else %}
            <div class="table-responsive">
                <table class="table table-bordered text-center">
                    <thead class="thead-dark">
                        <tr>
                            <th>ID</th>
                            <th>Date de Commande</th>
                            <th>Produit</th>
                            <th>Quantit√©</th>
                            <th>Total (DT)</th>
                            <th>Nom de l'utilisateur</th>
                            <th>Email de l'utilisateur</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for commande in commandes %}
                            <tr data-id="{{ commande.id }}">
                                <td>{{ commande.id }}</td>
                                <td>{{ commande.dateCommande|date('d/m/Y H:i') }}</td>
                                <td><input type="text" class="form-control edit-field" data-field="nomProduit" value="{{ commande.nomProduit }}"></td>
                                <td><input type="number" class="form-control edit-field" data-field="quantite" value="{{ commande.quantite }}"></td>
                                <td><input type="number" step="0.01" class="form-control edit-field" data-field="prixTotal" value="{{ commande.prixTotal }}"></td>
                                <td>{{ commande.user ? commande.user.nom : 'Inconnu' }}</td>
                                <td>{{ commande.user ? commande.user.email : 'Inconnu' }}</td>
                                <td class="d-flex gap-2 justify-content-center">
    <button class="btn btn-success btn-sm btn-modifier"><i class="fas fa-save"></i> Modifier</button>
    <button class="btn btn-danger btn-sm btn-supprimer"><i class="fas fa-trash"></i> Supprimer</button>
</td>

                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        {% endif %}
    </main>

    <!-- JavaScript -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.4/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        document.addEventListener("DOMContentLoaded", function () {
            // üîÑ Modifier une commande
            document.querySelectorAll(".btn-modifier").forEach(button => {
                button.addEventListener("click", function () {
                    let row = this.closest("tr");
                    let id = row.dataset.id;

                    let data = {};
                    row.querySelectorAll(".edit-field").forEach(input => {
                        data[input.dataset.field] = input.value;
                    });

                    fetch(`/admin/commandes/modifier/${id}`, {
                        method: "POST",
                        headers: { "Content-Type": "application/json" },
                        body: JSON.stringify(data)
                    })
                    .then(response => response.json())
                    .then(data => {
                        alert(data.message);
                    })
                    .catch(error => console.error("‚ùå Erreur AJAX :", error));
                });
            });

            // ‚ùå Supprimer une commande
            document.querySelectorAll(".btn-supprimer").forEach(button => {
                button.addEventListener("click", function () {
                    if (!confirm("Voulez-vous vraiment supprimer cette commande ?")) return;

                    let row = this.closest("tr");
                    let id = row.dataset.id;

                    fetch(`/admin/commandes/supprimer/${id}`, {
                        method: "DELETE",
                    })
                    .then(response => response.json())
                    .then(data => {
                        alert(data.message);
                        row.remove();
                    })
                    .catch(error => console.error("‚ùå Erreur AJAX :", error));
                });
            });
        });
    </script>

</body>
</html>
