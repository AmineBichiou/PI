
{% block title %}Réinitialisation du mot de passe{% endblock %}

{% block body %}
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f0fff0;
            color: #2d572c;
            text-align: center;
            padding: 20px;
        }
        .container {
            background: #ffffff;
            border-radius: 10px;
            box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
            padding: 20px;
            max-width: 400px;
            margin: 50px auto;
            border-left: 5px solid #2d572c;
        }
        h1 {
            color: #2d572c;
        }
        .btn {
            background-color: #2d572c;
            color: white;
            padding: 10px 15px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            font-weight: bold;
        }
        .btn:hover {
            background-color: #256d1b;
        }
        .logo {
            position: absolute;
            top: 10px;
            left: 10px;
            width: 300px;
        }
    </style>

    <img src="{{ asset('images/logo.png') }}" alt="Logo" class="logo">

    <div class="container">
        <h1>Réinitialisez votre mot de passe</h1>

        {{ form_start(resetForm) }}
            {{ form_row(resetForm.plainPassword) }}
            <button class="btn">Réinitialiser le mot de passe</button>
        {{ form_end(resetForm) }}
    </div>
{% endblock %}
