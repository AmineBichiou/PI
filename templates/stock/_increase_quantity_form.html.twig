{# templates/stock/_increase_quantity_form.html.twig #}
<form action="{{ path('app_stock_increase', { id: stock.id }) }}" method="post" class="form-inline">
  <input type="hidden" name="_token" value="{{ csrf_token('increase' ~ stock.id) }}">
  
  <div class="form-group mb-2">
      <label for="current-quantity" class="mr-2">Quantité actuelle :</label>
      <input type="text" id="current-quantity" class="form-control" value="{{ stock.produit.quantite }}" readonly>
  </div>

  <div class="form-group mx-sm-3 mb-2">
      <label for="amount" class="mr-2">Quantité à ajouter :</label>
      <input type="number" id="amount" name="amount" class="form-control" min="1" required>
  </div>

  <button type="submit" class="btn btn-primary mb-2">
      <i class="fas fa-plus"></i> Ajouter
  </button>
</form>