{# templates/stock/delete.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Supprimer Stock{% endblock %}

{% block body %}
<div class="main-content">
    <div class="container-fluid p-4">
        <div class="card shadow">
            <div class="card-header bg-danger text-white py-3">
                <h5 class="m-0"><i class="fas fa-exclamation-triangle mr-2"></i>Confirmation de suppression</h5>
            </div>
            <div class="card-body text-center">
                <div class="alert alert-danger mb-4">
                    <h4 class="alert-heading">Attention !</h4>
                    <p>Vous êtes sur le point de supprimer définitivement ce stock :</p>
                    <hr>
                    <p class="mb-0 fw-bold">{{ stock.produit }} (Quantité: {{ stock.quantite }})</p>
                </div>
                
                <form method="post" class="d-inline">
                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ stock.id) }}">
                    <button type="submit" class="btn btn-danger btn-lg shadow-sm">
                        <i class="fas fa-trash mr-2"></i>Confirmer la suppression
                    </button>
                </form>
                <a href="{{ path('app_stock_index') }}" class="btn btn-secondary btn-lg shadow-sm">
                    <i class="fas fa-times-circle mr-2"></i>Annuler
                </a>
            </div>
        </div>
    </div>
</div>
{% endblock %}