{# templates/entrepot/index.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Gestion des Entrepôts{% endblock %}

{% block body %}
<div class="main-content">
    <div class="container-fluid p-4">
        <div class="card shadow">
            <div class="card-header bg-primary text-white py-3">
                <h5 class="m-0"><i class="fas fa-warehouse mr-2"></i>Gestion des Entrepôts</h5>
            </div>
            <div class="card-body">
                <a href="{{ path('app_entrepot_new') }}" class="btn btn-primary mb-4">
                    <i class="fas fa-plus mr-2"></i>Ajouter un entrepôt
                </a>

                {% for message in app.flashes('success') %}
                    <div class="alert alert-success mb-4">
                        {{ message }}
                    </div>
                {% endfor %}

                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Nom</th>
                            <th>Adresse</th>
                            <th>Ville</th>
                            <th>Espace</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for entrepot in entrepots %}
                        <tr>
                            <td>{{ entrepot.id }}</td>
                            <td>{{ entrepot.nom }}</td>
                            <td>{{ entrepot.adresse }}</td>
                            
                            <td>{{ entrepot.ville ?? 'N/A' }}</td>
                            <td>{{ entrepot.espace }}</td>
                            <td>
                                <a href="{{ path('app_entrepot_edit', { id: entrepot.id }) }}" class="btn btn-sm btn-warning">
                                    <i class="fas fa-edit"></i> Modifier
                                </a>
                                <form action="{{ path('app_entrepot_delete', { id: entrepot.id }) }}" method="post" class="d-inline">
                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ entrepot.id) }}">
                                    <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Êtes-vous sûr de vouloir supprimer cet entrepôt ?')">
                                        <i class="fas fa-trash"></i> Supprimer
                                    </button>
                                </form>
                            </td>
                        </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
{% endblock %}