{% block title %}{% endblock %}

{% block body %}
    <div class="profile-container">
        <div class="profile-header">
            <img src="{{ asset('images/logo.png') }}" alt="Logo" class="logo">
            <h1>Profil de {{ user.nom }} {{ user.prenom }}</h1>
        </div>

        <div class="profile-content">
            <ul class="profile-info">
             <li><strong>Nom :</strong> {{ user.nom }}</li>
                <li><strong>Prénom :</strong> {{ user.prenom }}</li>
                
                <li><strong>Email :</strong> {{ user.email }}</li>
                <li><strong>Travail :</strong> {{ user.travail }}</li>
                <li><strong>Date d'inscription :</strong> {{ user.dateIscri ? user.dateIscri|date('d/m/Y') : 'Non spécifiée' }}</li>
                <li><strong>Numéro de téléphone :</strong> {{ user.numTel }}</li>
                <li><strong>Vérifié :</strong> {{ user.isVerified ? 'Oui' : 'Non' }}</li>
               <li><strong>Face Token :</strong> {{ user.faceToken ? user.faceToken : 'Non spécifié' }}</li>
            </ul>

            {% if user.photoUrl %}
                <div class="profile-photo">
                    <img src="{{ asset('uploads/photos/' ~ user.photoUrl) }}" alt="Photo de profil">
                </div>
            {% endif %}
        </div>
    </div>

    <style>
        .profile-container {
            max-width: 600px;
            margin: 20px auto;
            padding: 20px;
            background: #f4fff0;
            border-radius: 10px;
            box-shadow: 0 4px 10px rgba(0, 128, 0, 0.2);
        }

        .profile-header {
            display: flex;
            align-items: center;
            gap: 15px;
            border-bottom: 2px solid #28a745;
            padding-bottom: 10px;
            margin-bottom: 15px;
        }

        .logo {
            position: absolute;
            top: 10px;
            left: 10px;
            width: 300px; /* Augmenter la taille */
            height: auto;
        }

        .profile-info {
            list-style: none;
            padding: 0;
        }

        .profile-info li {
            padding: 8px 0;
            border-bottom: 1px solid #d4edda;
        }

        .profile-photo {
            text-align: center;
            margin-top: 15px;
        }

        .profile-photo img {
            width: 150px;
            height: 150px;
            border-radius: 50%;
            object-fit: cover;
            border: 3px solid #28a745;
        }
    </style>
{% endblock %}
