{% block title %}Profile{% endblock %}

{% block body %}
    <div class="profile-container">
        <div class="profile-header">
            <img src="{{ asset('images/logo.png') }}" alt="Logo" class="logo">
            <h1>{{ user.nom }} {{ user.prenom }}</h1>
        </div>

        <div class="profile-content">
<form action="{{ path('app_admin_user_edit', {'id': user.id}) }}" method="POST" enctype="multipart/form-data">
    
</form>
                <ul class="profile-info">
                    <li>
                        <label for="nom"><strong>Nom :</strong></label>
                        <input type="text" id="nom" name="nom" value="{{ user.nom }}" required>
                    </li>
                    <li>
                        <label for="prenom"><strong>Prénom :</strong></label>
                        <input type="text" id="prenom" name="prenom" value="{{ user.prenom }}" required>
                    </li>
                    <li>
                        <label for="email"><strong>Email :</strong></label>
                        <input type="email" id="email" name="email" value="{{ user.email }}" required>
                    </li>
                    <li>
                        <label for="travail"><strong>Travail :</strong></label>
                        <input type="text" id="travail" name="travail" value="{{ user.travail }}" required>
                    </li>
                    <li>
                        <label for="numTel"><strong>Numéro de téléphone :</strong></label>
                        <input type="text" id="numTel" name="numTel" value="{{ user.numTel }}">
                    </li>
                    <li>
                        <label for="photo"><strong>Photo de Profil :</strong></label>
                        <input type="file" id="photo" name="photo">
                    </li>
                    <li>
                        <label for="isVerified"><strong>Vérifié :</strong></label>
                        <select id="isVerified" name="isVerified">
                            <option value="1" {{ user.isVerified ? 'selected' : '' }}>Oui</option>
                            <option value="0" {{ not user.isVerified ? 'selected' : '' }}>Non</option>
                        </select>
                    </li>
                </ul>

                <div class="form-actions">
                    <button type="submit">Sauvegarder les modifications</button>
                </div>
            </form>
        </div>
    </div>

    <style>
        /* Styling for the editable profile form */
        .profile-container {
            max-width: 600px;
            margin: 20px auto;
            padding: 20px;
            background: #fafaf5;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(34, 139, 34, 0.2);
        }

        .profile-header {
            display: flex;
            align-items: center;
            gap: 15px;
            border-bottom: 2px solid #6b8e23;
            padding-bottom: 10px;
            margin-bottom: 15px;
        }

        .logo {
            width: 100px;
            height: auto;
        }

        .profile-info {
            list-style: none;
            padding: 0;
            margin: 0;
            font-family: 'Arial', sans-serif;
            color: #4b7f33;
        }

        .profile-info li {
            padding: 8px 0;
            border-bottom: 1px solid #c6d8c5;
        }

        .profile-info input, .profile-info select {
            width: 100%;
            padding: 8px;
            margin-top: 5px;
            border: 1px solid #ddd;
            border-radius: 4px;
        }

        .form-actions {
            margin-top: 20px;
            text-align: center;
        }

        .form-actions button {
            padding: 10px 20px;
            background-color: #28a745;
            color: white;
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }

        .form-actions button:hover {
            background-color: #218838;
        }
    </style>
{% endblock %}
