    {% for commentaire in evenement.commentaireEvents %}
        <div class="card mb-3">
            <div class="card-body">
                <p class="card-text">{{ commentaire.contenu }}</p>
                <small class="text-muted">Posté le {{ commentaire.dateCreation|date('d/m/Y H:i') }} par {{ commentaire.user.nom }}</small>
            </div>
        </div>
    {% else %}
        <p>Aucun commentaire pour le moment.</p>
    {% endfor %}
