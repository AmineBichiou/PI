                                    </div>
                                </li>
                                <li>
                                    <div class="d-flex justify-content-between fruite-name">
                                        <a href="{{ path('app_evenements_liste', {'sort_by': 'conference'}) }}"><i class="fas fa-apple-alt me-2"></i>Conférence</a>
                                        <span>(2)</span>
                                    </div>
                                </li>
                            </ul>
                        </div>

                        <!-- Bannière -->
                        <div class="position-relative">
                            <img
                                src="img/banner-fruits.jpg"
                                class="img-fluid w-100 rounded"
                                alt=""
                            />
                        </div>
                    </div>
                </div>

                <!-- Zone centrale agrandie -->
                <div class="col-lg-9">
                    <div class="event-grid">
                        {% if evenements is empty %}
                            <div class="alert alert-info">
                                Aucun événement trouvé pour votre recherche.
                            </div>
                        {% else %}
                            {% for evenement in evenements %}
                                <div class="rounded position-relative fruite-item">
                                    <!-- Photo de l'événement -->
                                    <div class="fruite-img position-relative">
                                        <img
                                            src="{{ asset('uploads/photos/' ~ evenement.photo) }}"
                                            class="event-image"
                                            alt="{{ evenement.titre }}"
                                        />
                                    </div>

                                    <!-- Nom de l'événement, date et bouton "Voir détails" -->
                                    <div class="p-4 border border-secondary border-top-0 rounded-bottom">
                                        <div class="d-flex justify-content-between align-items-center">
                                            <!-- Nom de l'événement -->
                                            <h4 class="event-title mb-0">{{ evenement.titre }}</h4>
                                            <!-- Date de début et bouton "Voir détails" -->
                                            <div class="d-flex align-items-center">
                                                <p class="text-primary mb-0 me-3">
                                                    {{ evenement.dateDebut|date('d/m/Y H:i') }}
                                                </p>
                                                <a
                                                    href="{{ path('app_evenement_detail', { id: evenement.id }) }}"
                                                    class="btn btn-primary rounded-pill px-3"
                                                >
                                                    Voir détails
                                                </a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            {% endfor %}
                        {% endif %}
                    </div>

<!-- Pagination -->
<div class="d-flex justify-content-center mt-4">
    <nav aria-label="Page navigation example">
        <ul class="pagination pagination-horizontal">
            {# Bouton "Précédent" toujours affiché #}
            <li class="page-item {{ evenements.currentPageNumber == 1 ? 'disabled' : '' }}">
                <a class="page-link" href="{{ evenements.currentPageNumber == 1 ? '#' : path(app.request.attributes.get('_route'), app.request.query.all|merge({'page': evenements.currentPageNumber - 1})) }}">
                    Précédent
                </a>
            </li>

            {# Toujours afficher 1, 2, 3 sur la même ligne #}
            {% for page in [1, 2, 3] %}
                <li class="page-item {{ page == evenements.currentPageNumber ? 'active' : '' }}">
                    <a class="page-link" href="{{ path(app.request.attributes.get('_route'), app.request.query.all|merge({'page': page})) }}">{{ page }}</a>
                </li>
            {% endfor %}

            {# Bouton "Suivant" toujours affiché #}
            <li class="page-item {{ evenements.currentPageNumber == evenements.pageCount ? 'disabled' : '' }}">
                <a class="page-link" href="{{ evenements.currentPageNumber == evenements.pageCount ? '#' : path(app.request.attributes.get('_route'), app.request.query.all|merge({'page': evenements.currentPageNumber + 1})) }}">
                    Suivant
                </a>
            </li>
        </ul>
    </nav>
