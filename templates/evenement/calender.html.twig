    <!-- Calendar Initialization Script -->
    <script>
      document.addEventListener("DOMContentLoaded", function () {
        var calendarEl = document.getElementById("calendar");

        if (!calendarEl) {
          console.error("L'élément avec l'ID 'calendar' n'existe pas.");
          return;
        }

        var calendar = new FullCalendar.Calendar(calendarEl, {
          plugins: [
            FullCalendar.dayGridPlugin,
            FullCalendar.interactionPlugin,
            FullCalendar.timeGridPlugin,
          ],
          initialView: "dayGridMonth",
          locale: "fr",
          headerToolbar: {
            left: "prev,next today",
            center: "title",
            right: "dayGridMonth,timeGridWeek,timeGridDay",
          },
          events: "/api/evenements",
          eventClick: function (info) {
            alert(
              "Événement : " +
                info.event.title +
                "\nDébut : " +
                info.event.start.toLocaleString()
            );
          },
          selectable: true,
          selectMirror: true,
          select: function (info) {
            let title = prompt("Entrez le titre de l'événement :");
            if (title) {
              calendar.addEvent({
                title: title,
                start: info.start,
                end: info.end,
                allDay: info.allDay,
              });
            }
          },
          editable: true,
          eventDrop: function (info) {
            alert("Événement déplacé à : " + info.event.start.toLocaleString());
          },
          eventColor: "#378006", // Couleur par défaut pour tous les événements
          eventTextColor: "#ffffff", // Couleur du texte des événements
        });

        calendar.render();
      });
    </script>
