<style>
/* Container for the tags section */
.tags {
    padding: 1em;
    background-color: #f8f8f8;
    border: 1px solid #ddd;
    border-radius: 8px;
    margin-bottom: 1em;
}

/* Header styling */
.tags h3 {
    margin-bottom: 0.5em;
    font-size: 1.2em;
    color: #333;
}

/* Container for listing tags vertically */
.tags-list {
    display: flex;
    flex-direction: column;
    gap: 2px;
}

/* Custom hover effect for tag buttons */
.btn:hover {
    background-color: #000 !important;
    color: #fff !important;
}
</style>

<div class="tags">
    <h3>Search By Tag</h3>
    <div class="tags-list">
        {% for tag in tags %}
            <a href="{{ path('reclamation_filter_by_tag', { 'tagName': tag.name }) }}" class="btn border border-secondary rounded-pill px-3 py-1 mb-2 text-primary">
                {{ tag.name }}
            </a>
        {% else %}
            <span>No tags found.</span>
        {% endfor %}
    </div>
</div>
