{# templates/google_calendar/events.html.twig #}
<!DOCTYPE html>
<html>
<head>
    <title>Google Calendar Events</title>
    <link href="https://cdn.jsdelivr.net/npm/fullcalendar@5.11.3/main.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/fullcalendar@5.11.3/main.min.js"></script>
    <style>
        .flash-success { color: green; }
        .flash-error { color: red; }
        #calendar { max-width: 900px; margin: 20px auto; }
        .delete-button { color: red; margin-left: 10px; }
    </style>
</head>
<body>
    <h1>Google Calendar Events</h1>

    {# Display flash messages #}
    {% for label, messages in app.flashes %}
        {% for message in messages %}
            <div class="flash-{{ label }}">{{ message }}</div>
        {% endfor %}
    {% endfor %}

    {# FullCalendar Display #}
    <h2>My Calendar</h2>
    <div id="calendar"></div>

    {# Form to add a new event #}
    <h2>Add a New Event</h2>
    <form action="{{ path('google_calendar_add_event') }}" method="post">
        <label for="summary">Event Title:</label>
        <input type="text" id="summary" name="summary" value="New Event"><br>
        <label for="description">Description:</label>
        <textarea id="description" name="description">Added via Symfony</textarea><br>
        <button type="submit">Add Event</button>
    </form>

    {# List existing events with delete option #}
    <h2>Event List</h2>
    {% if events is empty %}
        <p>No events found.</p>
    {% else %}
        <ul>
            {% for event in events %}
                <li>
                    <strong>{{ event.summary ?? 'No title' }}</strong>
                    <form action="{{ path('google_calendar_remove_event', {'eventId': event.id}) }}" method="post" style="display: inline;">
                        <button type="submit" class="delete-button" onclick="return confirm('Are you sure you want to delete this event?');">Delete</button>
                    </form>
                    <br>
                    {% if event.start.dateTime %}
                        Start: {{ event.start.dateTime|date('Y-m-d H:i:s') }}<br>
                        End: {{ event.end.dateTime|date('Y-m-d H:i:s') }}
                    {% elseif event.start.date %}
                        Start: {{ event.start.date|date('Y-m-d') }} (All-day)<br>
                        End: {{ event.end.date|date('Y-m-d') }} (All-day)
                    {% else %}
                        No start/end time
                    {% endif %}
                </li>
            {% endfor %}
        </ul>
    {% endif %}

    {# JavaScript to initialize FullCalendar #}
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            var calendarEl = document.getElementById('calendar');
            var calendar = new FullCalendar.Calendar(calendarEl, {
                initialView: 'dayGridMonth',
                events: [
                    {% for event in events %}
                        {
                            title: '{{ event.summary ?? 'No title' }}',
                            start: '{{ event.start.dateTime ?? event.start.date ?? '' }}',
                            end: '{{ event.end.dateTime ?? event.end.date ?? '' }}',
                            allDay: {{ event.start.date ? 'true' : 'false' }}
                        },
                    {% endfor %}
                ]
            });
            calendar.render();
        });
    </script>
</body>
</html>