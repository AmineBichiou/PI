{# templates/dashboard/index.html.twig #}
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <title>Dashboard - Gestion des Stocks</title>
    <meta content="width=device-width, initial-scale=1.0" name="viewport">
    <meta content="" name="keywords">
    <meta content="" name="description">

    <!-- Google Web Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@400;600&family=Raleway:wght@600;800&display=swap" rel="stylesheet">

    <!-- Icon Font Stylesheet -->
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.4/css/all.css"/>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css" rel="stylesheet">

    <!-- Libraries Stylesheet -->
    <link href="lib/lightbox/css/lightbox.min.css" rel="stylesheet">
    <link href="lib/owlcarousel/assets/owl.carousel.min.css" rel="stylesheet">

    <link href="{{ asset('css/bootstrap.min.css') }}" rel="stylesheet">

    <!-- Template Stylesheet -->
    <link href="{{ asset('css/style.css') }}" rel="stylesheet">
    <link href="{{ asset('css/sidebar.css') }}" rel="stylesheet">

    <!-- Chart.js -->
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

    <style>
        .reclamation-container {
            max-width: 600px;
            margin: 50px auto;
            padding: 20px;
            border-radius: 10px;
            text-align: center;
            border: 1px solid #ddd;
            background-color: #fff;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }

        .form-group {
            margin-bottom: 20px;
            text-align: left;
        }

        label {
            font-weight: bold;
            display: block;
            margin-bottom: 5px;
        }

        .form-control, .textarea {
            width: 100%;
            padding: 12px;
            font-size: 16px;
            border-radius: 5px;
            border: 1px solid #ccc;
            background-color: #f9f9f9;
            box-sizing: border-box;
        }

        .textarea {
            min-height: 200px;
        }

        .submit-button {
            background: #28a745;
            color: white;
            padding: 12px 20px;
            border: none;
            border-radius: 5px;
            font-size: 16px;
            width: 100%;
            cursor: pointer;
        }

        .submit-button:hover {
            background: #218838;
        }

        .error-message {
            color: red;
            font-size: 14px;
            margin-top: 5px;
        }

        .form-control:focus, .textarea:focus {
            outline: none;
            border-color: #80bdff;
            box-shadow: 0 0 0 0.2rem rgba(38, 143, 255, 0.25);
        }

        .title-input {
            font-size: 18px;
            font-weight: bold;
            border: 2px solid #28a745;
            padding: 12px;
            border-radius: 5px;
            background-color: #f9f9f9;
            transition: all 0.3s ease;
        }

        .title-input:focus {
            border-color: #218838;
            box-shadow: 0 0 5px rgba(40, 167, 69, 0.5);
        }

        @media (max-width: 600px) {
            .reclamation-container {
                padding: 15px;
            }
        }
    </style>
</head>

<body style="background: rgb(214, 221, 218)">
    {% include 'backoffice/sidebar.html.twig' %}

    <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
        <div class="page-wrapper">
            <div class="content-container">
                <!-- Main Content -->
                <div class="main-container">
                    <div class="reclamation-container">
                        <h1>Edit Reclamation</h1>
                        <p>Please update your reclamation details below.</p>

                        {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
                        <div class="form-group">
                            <label for="{{ form.title.vars.id }}">Title: <span class="required">*</span></label>
                            {{ form_widget(form.title, {'attr': {'class': 'form-control title-input'}}) }}
                            <p class="error-message">{{ form_errors(form.title) }}</p>
                        </div>

                        <div class="form-group">
                            <label for="{{ form.description.vars.id }}">Describe Your Reclamation: <span class="required">*</span></label>
                            {{ form_widget(form.description, {'attr': {'class': 'textarea'}}) }}
                            <p class="error-message">{{ form_errors(form.description) }}</p>
                        </div>

                        <div class="form-group">
                            {{ form_widget(form.save, {'attr': {'class': 'submit-button'}}) }}
                        </div>

                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </main>
</body>
</html>