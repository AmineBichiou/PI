<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Accueil - Agriplanner</title>
    <link rel="stylesheet" href="{{ asset('css/homepage.css') }}">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    
    <style>
        :root {
            --primary: #27ae60;
            --secondary: #219653;
            --dark: #2d3436;
            --light: #f7f8fc;
            --accent: #f1c40f;
            --error: #e74c3c;
        }

        * {
            font-family: 'Poppins', sans-serif;
            box-sizing: border-box;
        }

        body {
            background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
            margin: 0;
            padding: 0;
        }

        .reclamation-container {
            max-width: 720px;
            margin: 80px auto;
            padding: 40px;
            border-radius: 25px;
            background: white;
            box-shadow: 0 15px 40px rgba(0, 0, 0, 0.1);
            animation: slideUp 0.6s ease-out;
        }

        @keyframes slideUp {
            from { transform: translateY(50px); opacity: 0; }
            to { transform: translateY(0); opacity: 1; }
        }

        h1 {
            color: var(--dark);
            font-weight: 700;
            font-size: 2.4rem;
            margin-bottom: 10px;
            text-align: center;
        }

        .reclamation-container p {
            color: #666;
            font-size: 1.1rem;
            text-align: center;
            margin-bottom: 35px;
        }

        .form-group {
            margin-bottom: 30px;
            position: relative;
        }

        label {
            font-weight: 600;
            color: var(--dark);
            margin-bottom: 8px;
            display: block;
            font-size: 1.1rem;
        }

        .required {
            color: var(--primary);
            font-size: 1.2rem;
        }

        .form-control, .textarea {
            width: 100%;
            padding: 15px;
            font-size: 1rem;
            border-radius: 10px;
            border: 2px solid #e9ecef;
            background: var(--light);
            transition: all 0.3s ease;
        }

        .textarea {
            min-height: 200px;
            resize: vertical;
        }

        .title-input {
            font-size: 1.2rem;
            font-weight: 500;
            border: 2px solid var(--primary);
        }

        .form-control:focus, .textarea:focus {
            border-color: var(--primary);
            box-shadow: 0 0 10px rgba(39, 174, 96, 0.2);
            outline: none;
        }

        .submit-button {
            background: var(--primary);
            color: white;
            padding: 15px 30px;
            border: none;
            border-radius: 50px;
            font-size: 1.1rem;
            font-weight: 600;
            width: 100%;
            cursor: pointer;
            position: relative;
            overflow: hidden;
            box-shadow: 0 5px 15px rgba(39, 174, 96, 0.3);
        }

        .submit-button:hover {
            background: var(--secondary);
            transform: translateY(-2px);
        }

        .submit-button::after {
            content: '';
            position: absolute;
            width: 0;
            height: 0;
            background: rgba(255, 255, 255, 0.2);
            border-radius: 50%;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            transition: all 0.6s ease;
        }

        .submit-button:hover::after {
            width: 300px;
            height: 300px;
        }

        .error-message {
            color: var(--error);
            font-size: 0.9rem;
            margin-top: 8px;
            font-weight: 500;
        }

        /* Enhanced Star Rating */
        .star-rating {
            font-size: 32px;
            color: #ddd;
            display: flex;
            justify-content: center;
            gap: 10px;
            margin: 10px 0;
        }

        .star-rating .star {
            transition: all 0.2s ease;
            transform: scale(1);
        }

        .star-rating .star:hover,
        .star-rating .star.selected {
            color: var(--accent);
            transform: scale(1.1);
        }

        .rating-value {
            display: none;
        }

        /* Footer Styling */
        .footer {
            background: var(--dark);
            padding: 60px 0 0;
            position: relative;
            overflow: hidden;
        }

        .footer::before {
            content: '';
            position: absolute;
            top: -150px;
            left: 0;
            width: 100%;
            height: 300px;
            background: radial-gradient(circle, rgba(39, 174, 96, 0.1), transparent);
        }

        .footer h1 {
            color: var(--primary);
            font-size: 2.5rem;
        }

        .footer-item h4 {
            color: white;
            font-weight: 600;
            margin-bottom: 25px;
        }

        .footer-item p, .btn-link {
            color: rgba(255, 255, 255, 0.7);
            font-size: 1rem;
            margin-bottom: 10px;
        }

        .btn-link {
            text-decoration: none;
            padding: 5px 0;
        }

        .btn-link:hover {
            color: var(--primary);
            padding-left: 5px;
        }

        .btn-primary {
            background: var(--primary);
            border: none;
            padding: 12px 25px;
            border-radius: 50px;
            font-weight: 600;
        }

        .btn-primary:hover {
            background: var(--secondary);
        }

        .btn-outline-secondary {
            border-color: rgba(255, 255, 255, 0.3);
            color: white;
            margin: 0 5px;
            transition: all 0.3s ease;
        }

        .btn-outline-secondary:hover {
            background: var(--primary);
            border-color: var(--primary);
        }

        .form-control.border-0 {
            background: rgba(255, 255, 255, 0.1);
            color: white;
            padding: 12px 20px;
        }

        .form-control.border-0::placeholder {
            color: rgba(255, 255, 255, 0.5);
        }

        .copyright {
            background: #222;
            padding: 20px 0;
        }

        @media (max-width: 600px) {
            .reclamation-container {
                margin: 40px 20px;
                padding: 25px;
            }
            h1 { font-size: 2rem; }
            .star-rating { font-size: 28px; }
        }
    </style>
</head>

