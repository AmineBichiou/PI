<style>
/* Layout */
.page-wrapper {
    padding: 15px;
}

.content-container {
    display: flex;
    justify-content: space-between;
    gap: 15px;
}

.main-container {
    width: 70%;
}

.sidebar {
    width: 25%;
    background-color: #ffffff;
    padding: 12px;
    border-radius: 6px;
    box-shadow: 0 0 8px rgba(0,0,0,0.1);
    display: flex;
    flex-direction: column;
    gap: 8px;
}

/* Header and no-content message */
.header {
    font-size: 24px;
    margin-bottom: 15px;
    color: #6C983B;
    border-bottom: 2px solid #EEC044;
    padding-bottom: 8px;
}

.no-reclamations {
    font-size: 16px;
    color: #ff5555;
    padding: 8px;
}

/* Reclamation Items */
.reclamations-container {
    display: flex;
    flex-direction: column;
    gap: 12px;
}

.reclamation-item {
    display: flex;
    flex-direction: column;
    padding: 12px;
    border: 1px solid #7AAE49;
    border-radius: 6px;
    background-color: #ffffff;
    box-shadow: 0 2px 4px rgba(122, 174, 73, 0.2);
    transition: transform 0.3s, box-shadow 0.3s;
    cursor: pointer;
}

.reclamation-item:hover {
    transform: translateY(-2px);
    box-shadow: 0 4px 8px rgba(122, 174, 73, 0.3);
}

/* Header: Image and Title in a Row */
.reclamation-header {
    display: flex;
    align-items: center;
    justify-content: space-between;
}

/* Image Container */
.profile-img-container {
    flex-shrink: 0;
}

.profile-img {
    width: 40px;
    height: 40px;
    border-radius: 50%;
    object-fit: cover;
    border: 2px solid #ddd;
}

/* Title Container */
.reclamation-title-container {
    display: flex;
    flex-direction: column;
    margin-left: 8px;
    flex-grow: 1;
}

/* Title Styling */
.reclamation-title {
    font-size: 16px;
    font-weight: bold;
    color: #333;
    margin: 0;
}

/* Status styling inline with title */
.status-inline {
    display: inline-block;
    margin-bottom: 4px;
    font-size: 12px;
    color: #333;
}

.status-icon {
    font-size: 14px;
    margin-right: 4px;
}

/* Description and Date */
.reclamation-description {
    color: #555;
    font-size: 12px;
    margin: 4px 0;
}

.reclamation-date {
    font-size: 10px;
    color: #666;
    margin: 0;
}

.username {
    font-size: 14px;
    font-weight: bold;
    color: #333;
}

/* Buttons Container */
.buttons-container {
    margin-left: auto;
    display: flex;
    gap: 8px;
}

.edit-btn, .delete-btn {
    background: none;
    border: none;
    cursor: pointer;
    font-size: 16px;
    transition: 0.3s;
}

.edit-btn {
    color: #4CAF50;
}

.edit-btn:hover {
    color: #2E7D32;
}

.delete-btn {
    color: #ff5555;
}

.delete-btn:hover {
    color: #cc0000;
}

/* Sidebar styles */
.search-section {
    display: flex;
    gap: 4px;
}

.search-bar {
    flex: 1;
    padding: 6px;
    border: 1px solid #7AAE49;
    border-radius: 4px;
    background-color: #ffffff;
    color: #333;
}

.search-btn {
    background-color: #7AAE49;
    border: none;
    padding: 6px 10px;
    cursor: pointer;
    border-radius: 4px;
    color: #ffffff;
}

.btn {
    display: inline-block;
    width: 100%;
    text-align: center;
    padding: 10px;
    margin-top: 8px;
    border: none;
    border-radius: 4px;
    cursor: pointer;
    font-size: 14px;
    text-decoration: none;
}
.unclickable {
    pointer-events: none;
    cursor: default;
    opacity: 0.6; /* Optional: Makes it visually distinct */
}

.subscribe-btn {
    background-color: #6C983B;
    color: #ffffff;
}

.subscribe-text {
    font-size: 10px;
    margin-top: 8px;
    color: #333;
}

/* Pagination Controls */
.pagination {
    margin-top: 15px;
    text-align: center;
}

.pagination-btn {
    text-decoration: none;
    padding: 6px 10px;
    margin: 0 4px;
    border: 1px solid #7AAE49;
    border-radius: 4px;
    color: #7AAE49;
    transition: background-color 0.3s, color 0.3s;
}

.pagination-btn:hover {
    background-color: #7AAE49;
    color: #ffffff;
}

.pagination-info {
    font-size: 12px;
    margin: 0 8px;
    color: #333;
}

/* Special Status Styles */
.closed-reclamation {
    background-color: #ffcccc !important; /* Light red */
    border: 1px solid #ff5555;
}

.resolved-reclamation {
    background-color: #ccffcc !important; /* Light green */
    border: 1px solid #4CAF50;
}
</style>
