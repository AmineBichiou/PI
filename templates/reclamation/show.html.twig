{% include 'homepage/newNav.html.twig' %}

<div class="page-wrapper">
    <div class="content-container">
        <!-- Main Content -->
        <div class="main-container">
            <h2 class="header">Reclamation Discussions</h2>

            {% if reclamations is empty %}
                <p class="no-reclamations">No reclamations available.</p>
            {% else %}
                <div class="reclamations-container">
                    {% for reclamation in reclamations %}
                        <div class="reclamation-item 
                            {% if reclamation.statut.value == 'fermee' %}closed-reclamation{% elseif reclamation.statut.value == 'resolue' %} resolved-reclamation{% endif %}"
                            data-href="{{ path('message_reclamation_index', {'id': reclamation.id}) }}"
                        >
                            <div class="reclamation-header">
                                <div class="profile-img-container">
                                    {% if reclamation.user and reclamation.user.photoUrl %}
                                        <img src="{{ asset('uploads/photos/' ~ reclamation.user.photoUrl) }}" alt="User Photo" class="profile-img">
                                    {% else %}
                                        <img src="{{ asset('images/admin.jpg') }}" alt="Default User Photo" class="profile-img">
                                    {% endif %}
                                </div>
                                <div class="reclamation-title-container">
                                    {% if reclamation.statut.value == 'fermee' %}
                                        <span class="status-inline">
                                            <span class="status-icon">‚ùå</span> Closed
                                        </span>
                                    {% elseif reclamation.statut.value == 'resolue' %}
                                        <span class="status-inline">
                                            <span class="status-icon">‚úÖ</span> Resolved
                                        </span>
                                    {% endif %}
                                    <p class="reclamation-title">{{ reclamation.title }}</p>
                                </div>
                                {% if reclamation.user and app.user and reclamation.user.id == app.user.id %}
                                    <div class="buttons-container">
                                        <a href="{{ path('reclamation_edit', {'id': reclamation.id}) }}" class="edit-btn" onclick="event.stopPropagation();">‚úèÔ∏è</a>
                                        <form action="{{ path('reclamation_delete', {'id': reclamation.id}) }}" method="POST" style="display: inline;" onclick="event.stopPropagation();">
                                            <button type="submit" class="delete-btn" onclick="return confirm('Are you sure you want to delete this reclamation?');">
                                                üóëÔ∏è
                                            </button>
                                        </form>
                                    </div>
                                {% endif %}
                            </div>
                            <p class="reclamation-description">{{ reclamation.description }}</p>
                            <p class="reclamation-date">
                                <span>Posted on: {{ reclamation.dateReclamation|date('d M Y H:i') }}</span> 
                                <span class="username">by {{ reclamation.user.Prenom }}</span>
                            </p>
                        </div>
                    {% endfor %}
                </div>

                <!-- Pagination Controls -->
                <div class="pagination">
                    {% if currentPage > 1 %}
                        <a href="{{ path('reclamation_show', {'page': currentPage - 1}) }}" class="pagination-btn">‚¨ÖÔ∏è Previous</a>
                    {% endif %}

                    <span class="pagination-info">Page {{ currentPage }} of {{ totalPages }}</span>

                    {% if currentPage < totalPages %}
                        <a href="{{ path('reclamation_show', {'page': currentPage + 1}) }}" class="pagination-btn">Next ‚û°Ô∏è</a>
                    {% endif %}
                </div>
            {% endif %}
        </div>
        <!-- Sidebar -->
        <div class="sidebar">
            <div class="search-section">
                <input type="text" class="search-bar" placeholder="Search reclamations...">
                <button class="search-btn">üîç</button>
            </div>
            <button type="button" class="btn subscribe-btn" onclick="window.location.href='{{ path('reclamation_new') }}'">
                Start a New Reclamation
            </button>
            <button type="button" class="btn subscribe-btn" onclick="window.location.href='{{ path('reclamation_newReview') }}'">
                Send a Review
            </button>
            <p class="subscribe-text">
                The Reclamation shown can be clicked to interact more with the community
            </p>
        </div>
    </div>
</div>

<script>
    // Make the entire container clickable.
    document.querySelectorAll('.reclamation-item').forEach(function(item) {
        item.addEventListener('click', function() {
            const href = this.getAttribute('data-href');
            if (href) {
                window.location.href = href;
            }
        });
    });
</script>

<style>
/* Layout */
.page-wrapper {
    padding: 15px;
}

.content-container {
    display: flex;
    justify-content: space-between;
    gap: 15px;
}

.main-container {
    width: 70%;
}

.sidebar {
    width: 25%;
    background-color: #ffffff;
    padding: 12px;
    border-radius: 6px;
    box-shadow: 0 0 8px rgba(0,0,0,0.1);
    display: flex;
    flex-direction: column;
    gap: 8px;
}

/* Header and no-content message */
.header {
    font-size: 24px;
    margin-bottom: 15px;
    color: #6C983B;
    border-bottom: 2px solid #EEC044;
    padding-bottom: 8px;
}

.no-reclamations {
    font-size: 16px;
    color: #ff5555;
    padding: 8px;
}

/* Reclamation Items */
.reclamations-container {
    display: flex;
    flex-direction: column;
    gap: 12px;
}

.reclamation-item {
    display: flex;
    flex-direction: column;
    padding: 12px;
    border: 1px solid #7AAE49;
    border-radius: 6px;
    background-color: #ffffff;
    box-shadow: 0 2px 4px rgba(122, 174, 73, 0.2);
    transition: transform 0.3s, box-shadow 0.3s;
    cursor: pointer;
}

.reclamation-item:hover {
    transform: translateY(-2px);
    box-shadow: 0 4px 8px rgba(122, 174, 73, 0.3);
}

/* Header: Image and Title in a Row */
.reclamation-header {
    display: flex;
    align-items: center;
    justify-content: space-between;
}

/* Image Container */
.profile-img-container {
    flex-shrink: 0;
}

.profile-img {
    width: 40px;
    height: 40px;
    border-radius: 50%;
    object-fit: cover;
    border: 2px solid #ddd;
}

/* Title Container */
.reclamation-title-container {
    display: flex;
    flex-direction: column;
    margin-left: 8px;
    flex-grow: 1;
}

/* Title Styling */
.reclamation-title {
    font-size: 16px;
    font-weight: bold;
    color: #333;
    margin: 0;
}

/* Status styling inline with title */
.status-inline {
    display: inline-block;
    margin-bottom: 4px;
    font-size: 12px;
    color: #333;
}

.status-icon {
    font-size: 14px;
    margin-right: 4px;
}

/* Description and Date */
.reclamation-description {
    color: #555;
    font-size: 12px;
    margin: 4px 0;
}

.reclamation-date {
    font-size: 10px;
    color: #666;
    margin: 0;
}

.username {
    font-size: 14px;
    font-weight: bold;
    color: #333;
}

/* Buttons Container */
.buttons-container {
    margin-left: auto;
    display: flex;
    gap: 8px;
}

.edit-btn, .delete-btn {
    background: none;
    border: none;
    cursor: pointer;
    font-size: 16px;
    transition: 0.3s;
}

.edit-btn {
    color: #4CAF50;
}

.edit-btn:hover {
    color: #2E7D32;
}

.delete-btn {
    color: #ff5555;
}

.delete-btn:hover {
    color: #cc0000;
}

/* Sidebar styles */
.search-section {
    display: flex;
    gap: 4px;
}

.search-bar {
    flex: 1;
    padding: 6px;
    border: 1px solid #7AAE49;
    border-radius: 4px;
    background-color: #ffffff;
    color: #333;
}

.search-btn {
    background-color: #7AAE49;
    border: none;
    padding: 6px 10px;
    cursor: pointer;
    border-radius: 4px;
    color: #ffffff;
}

.btn {
    display: inline-block;
    width: 100%;
    text-align: center;
    padding: 10px;
    margin-top: 8px;
    border: none;
    border-radius: 4px;
    cursor: pointer;
    font-size: 14px;
    text-decoration: none;
}

.subscribe-btn {
    background-color: #6C983B;
    color: #ffffff;
}

.subscribe-text {
    font-size: 10px;
    margin-top: 8px;
    color: #333;
}

/* Pagination Controls */
.pagination {
    margin-top: 15px;
    text-align: center;
}

.pagination-btn {
    text-decoration: none;
    padding: 6px 10px;
    margin: 0 4px;
    border: 1px solid #7AAE49;
    border-radius: 4px;
    color: #7AAE49;
    transition: background-color 0.3s, color 0.3s;
}

.pagination-btn:hover {
    background-color: #7AAE49;
    color: #ffffff;
}

.pagination-info {
    font-size: 12px;
    margin: 0 8px;
    color: #333;
}

/* Special Status Styles */
.closed-reclamation {
    background-color: #ffcccc !important; /* Light red */
    border: 1px solid #ff5555;
}

.resolved-reclamation {
    background-color: #ccffcc !important; /* Light green */
    border: 1px solid #4CAF50;
}
</style>
