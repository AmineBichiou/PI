                            <td>
                                <div class="profile-img-container">
                                    {% if testimonial.user and testimonial.user.photoUrl %}
                                        <img src="{{ asset('uploads/photos/' ~ testimonial.user.photoUrl) }}" alt="User Photo" class="profile-img">
                                    {% else %}
