{% extends 'base.html.twig' %}

{% block title %}Liste des Régions{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 1000px; width: 95%; font: 18px/1.5 sans-serif; }
</style>

<div class="example-wrapper">
    <h1>Liste des Régions</h1>

    <table class="table table-striped">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Nom</th>
                <th scope="col">Ville</th>
                <th scope="col">Description</th>
                <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for region in regions %}
                <tr>
                    <th scope="row">{{ region.id }}</th>
                    <td>{{ region.nom }}</td> <!-- Affichage du nom de la région -->
                    <td>{{ region.ville }}</td> <!-- Affichage de la ville de la région -->
                    <td>{{ region.description }}</td> <!-- Affichage de la description de la région -->
                    <td>
                        <a href="{{ path('app_region_voir', {'id': region.id}) }}" class="btn btn-info btn-sm">Voir</a>
                        <a href="{{ path('app_region_modifier', {'id': region.id}) }}" class="btn btn-warning btn-sm">Modifier</a>
                        <a href="{{ path('app_region_supprimer', {'id': region.id}) }}" class="btn btn-danger btn-sm" onclick="return confirm('Êtes-vous sûr de vouloir supprimer cette région ?')">Supprimer</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="5" class="text-center">Aucune région trouvée.</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
