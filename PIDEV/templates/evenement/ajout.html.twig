{% extends "base.html.twig" %}

{% block title %}Ajouter un événement{% endblock %}

{% block body %}
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header text-center d-flex align-items-center justify-content-center" style="background-color: #50aa54; color: white; font-size: 24px; font-weight: bold; height: 100px;">
                    Créer événement
                </div>
                <div class="card-body">
                    {# Affichage des messages flash en cas de succès ou d'erreur #}
                    {% for message in app.flashes('success') %}
                        <div class="alert alert-success">
                            {{ message }}
                        </div>
                    {% endfor %}
                    {% for message in app.flashes('error') %}
                        <div class="alert alert-danger">
                            {{ message }}
                        </div>
                    {% endfor %}

                    {# Début du formulaire #}
                    {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}

                    {# Champ Titre #}
                    <div class="form-group">
                        {{ form_label(form.titre, 'Titre de l\'événement', {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.titre, {'attr': {'class': 'form-control'}}) }}
                        {{ form_errors(form.titre) }}
                    </div>

                    {# Champ Description #}
                    <div class="form-group">
                        {{ form_label(form.description, 'Description', {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.description, {'attr': {'class': 'form-control', 'rows': 5}}) }}
                        {{ form_errors(form.description) }}
                    </div>

                    {# Champ Type #}
                    <div class="form-group">
                        {{ form_label(form.type, 'Type d\'événement', {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.type, {'attr': {'class': 'form-control'}}) }}
                        {{ form_errors(form.type) }}
                    </div>

                    {# Champ Statut #}
                    <div class="form-group">
                        {{ form_label(form.statut, 'Statut de l\'événement', {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.statut, {'attr': {'class': 'form-control'}}) }}
                        {{ form_errors(form.statut) }}
                    </div>

                    {# Champ Date de début #}
                    <div class="form-group">
                        {{ form_label(form.dateDebut, 'Date de début', {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.dateDebut, {'attr': {'class': 'form-control'}}) }}
                        {{ form_errors(form.dateDebut) }}
                    </div>

                    {# Champ Date de fin #}
                    <div class="form-group">
                        {{ form_label(form.dateFin, 'Date de fin', {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.dateFin, {'attr': {'class': 'form-control'}}) }}
                        {{ form_errors(form.dateFin) }}
                    </div>

                    {# Champ Photo #}
                    <div class="form-group">
                        {{ form_label(form.photoFile, 'Photo de l\'événement', {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.photoFile, {'attr': {'class': 'form-control'}}) }}
                        {{ form_errors(form.photoFile) }}
                        <small class="form-text text-muted">Formats acceptés : JPEG, PNG, GIF (max 5 Mo).</small>
                    </div>

                    {# Champ Régions #}
                    <div class="form-group">
                        {{ form_label(form.regions, 'Régions', {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.regions, {'attr': {'class': 'form-control'}}) }}
                        {{ form_errors(form.regions) }}
                    </div>

                    {# Bouton de soumission #}
                    <div class="form-group text-center">
                        <button type="submit" class="btn" style="background-color: #50aa54; color: white;">Ajouter l\'événement</button>
                    </div>

                    {# Fin du formulaire #}
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
