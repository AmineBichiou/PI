{% extends 'base.html.twig' %}

{% block title %}Liste des événements{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1 class="mb-4">Liste des événements</h1>
        
        {% if evenements is not empty %}
            <table class="table table-striped table-bordered table-hover">
                <thead class="thead-dark">
                    <tr>
                        <th>#</th>
                        <th>Titre</th>
                        <th>Description</th>
                        <th>Type</th>
                        <th>Statut</th>
                        <th>Date de début</th>
                        <th>Date de fin</th>
                        <th>Photo</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for evenement in evenements %}
                        <tr>
                            <td>{{ evenement.id }}</td>
                            <td>{{ evenement.titre }}</td>
                            <td>{{ evenement.description }}</td>
                            <td>{{ evenement.type.label() }}</td>
                            <td>{{ evenement.statut.label() }}</td>
                            <td>{{ evenement.dateDebut ? evenement.dateDebut|date('d/m/Y H:i') : 'Non spécifiée' }}</td>
                            <td>{{ evenement.dateFin ? evenement.dateFin|date('d/m/Y H:i') : 'Non spécifiée' }}</td>
                            <td>
                                {% if evenement.photo %}
                                    <img src="{{ asset('uploads/photos/' ~ evenement.photo) }}" alt="Photo de {{ evenement.titre }}" class="img-thumbnail" style="max-width: 100px; height: auto;">
                                {% else %}
                                    <span class="text-muted">Pas de photo</span>
                                {% endif %}
                            </td>
                            <td>
                                <a href="{{ path('app_evenement_voir', {'id': evenement.id}) }}" class="btn btn-info">Voir</a>
                                <a href="{{ path('app_evenement_modifier', {'id': evenement.id}) }}" class="btn btn-warning">Modifier</a>
                                <form action="{{ path('app_evenement_supprimer', {'id': evenement.id}) }}" method="post" style="display:inline;">
                                    <button type="submit" class="btn btn-danger" onclick="return confirm('Êtes-vous sûr de vouloir supprimer cet événement ?')">Supprimer</button>
                                </form>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        {% else %}
            <div class="alert alert-info">Aucun événement trouvé.</div>
        {% endif %}
    </div>
{% endblock %}
