{% extends 'base.html.twig' %}

{% block title %}Détails de l'événement - {{ evenement.titre }}{% endblock %}

{% block body %}
<div class="container mt-4">
    <h1 class="mb-4">Détails de l'événement</h1>

    <div class="card">
        <div class="card-body">
            <h2 class="card-title">{{ evenement.titre }}</h2>
            <p class="card-text"><strong>Description :</strong> {{ evenement.description }}</p>
            <p class="card-text"><strong>Type :</strong> {{ evenement.type.label() }}</p>
            <p class="card-text"><strong>Statut :</strong> {{ evenement.statut.label() }}</p>
            <p class="card-text"><strong>Date de début :</strong> {{ evenement.dateDebut|date('d/m/Y H:i') }}</p>
            <p class="card-text"><strong>Date de fin :</strong> {{ evenement.dateFin|date('d/m/Y H:i') }}</p>

            {# Affichage de la photo de l'événement #}
            {% if evenement.photo %}
                <div class="mt-3">
                    <strong>Photo :</strong>
                    <img src="{{ asset('uploads/photos/' ~ evenement.photo) }}" 
                         alt="Photo de l'événement {{ evenement.titre }}" 
                         class="img-fluid rounded">
                </div>
            {% else %}
                <p class="text-muted">Aucune photo disponible pour cet événement.</p>
            {% endif %}

            {# Affichage des régions associées #}
            <div class="mt-4">
                <strong>Régions associées :</strong>
                <ul class="list-group">
                    {% for evenementRegion in evenement.evenementRegions %}
                        <li class="list-group-item">
                            {{ evenementRegion.region.nom }} ({{ evenementRegion.region.ville }})
                        </li>
                    {% else %}
                        <li class="list-group-item">Aucune région associée.</li>
                    {% endfor %}
                </ul>
            </div>
        </div>
    </div>

    {# Bouton de retour à la liste #}
    <div class="mt-4">
        <a href="{{ path('app_evenement') }}" class="btn btn-primary">
            Retour à la liste des événements
        </a>
    </div>
</div>
{% endblock %}