{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/homepage.css') }}">
    <style>
        
        body {
            background-color: #ffffff;
            color: #333;
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
        }
        
        .page-wrapper {
            display: flex;
            justify-content: center;
            align-items: flex-start;
            margin: 50px auto;
            max-width: 900px;
        }
       
        .main-container {
            width: 60%;
            padding: 20px;
            background-color: #ffffff;
            border-radius: 10px;
            border: 1px solid #ddd;
            box-shadow: 0 2px 6px rgba(0, 0, 0, 0.1);
        }
        /* Right-side panel updated to match the main container */
        .side-panel {
            width: 35%;
            margin-left: 20px;
            padding: 20px;
            background-color: #ffffff;
            color: #333;
            border-radius: 10px;
            border: 1px solid #ddd;
        }
        
        .header {
            text-align: center;
            font-size: 1.5em;
            font-weight: bold;
            margin-bottom: 15px;
            color: #7AAE49;
        }
        .description {
            text-align: center;
            font-size: 1.1em;
            margin-bottom: 15px;
            color: #555;
        }
        
        .button {
            display: block;
            width: 100%;
            padding: 12px;
            background: #7AAE49;
            color: #fff;
            border: none;
            border-radius: 5px;
            font-size: 14px;
            font-weight: bold;
            text-align: center;
            text-decoration: none;
            margin-bottom: 15px;
        }
        .button:hover {
            background: #6E9C41;
        }
        /* Message container */
        .message {
            margin-bottom: 10px;
            padding: 5px;
            border-bottom: 1px solid #ddd;
            color: #333;
        }
        .message small {
            font-size: 0.8em;
            color: #999;
        }
        
        .search-bar {
            display: flex;
            align-items: center;
            background-color: #f9f9f9;
            border-radius: 5px;
            padding: 5px;
            margin: 15px 0;
        }
        .search-bar input {
            width: 100%;
            border: none;
            background: none;
            color: #333;
            padding: 5px;
            outline: none;
        }
        .search-bar button {
            background: none;
            border: none;
            cursor: pointer;
            color: #7AAE49;
        }
        .side-panel .section {
            margin-top: 15px;
            padding: 10px;
            background: #f1f1f1;
            border-radius: 5px;
        }
        .side-panel a {
            color: rgb(7, 7, 7);
            text-decoration: none;
            display: block;
            padding: 5px 0;
        }
        .side-panel a:hover {
            text-decoration: underline;
        }
        
        .discussion-link {
            cursor: pointer;
            display: block;
            padding: 5px 0;
            color: #333;
            text-decoration: none;
        }
        .discussion-link:hover {
            text-decoration: underline;
        }
    </style>
{% endblock %}

{% block body %}
    {% include 'navbar/navbar.html.twig' %}

    <div class="page-wrapper">
        <div class="main-container">
            <div class="header">Messages</div>
            <div class="description">
                {{ selectedReclamation.description }}
            </div>
            
            {% if selectedReclamation is not null %}
                <button id="toggleMessages" class="button">Show Messages</button>
                <div id="messagesContainer" style="display: none; margin-top: 20px;">
                    {% set messages = reclamationMessages[(selectedReclamation.id ~ '')]|default([]) %}
                    {% if messages is empty %}
                        <p style="text-align: center;">Aucun message pour cette r√©clamation.</p>
                    {% else %}
                        {% for message in messages %}
                            <div class="message">
                                <small>{{ message.dateMessage|date('Y-m-d H:i') }}</small>: {{ message.contenu }}
                            </div>
                        {% endfor %}
                    {% endif %}
                </div>
            {% else %}
                <p style="text-align: center;">
                    Aucune r√©clamation s√©lectionn√©e. S√©lectionnez une r√©clamation pour voir les messages.
                </p>
            {% endif %}
        </div>
        <div class="side-panel">
            <div style="font-size: 1.2em; font-weight: bold;">
                Date Posted: {{ selectedReclamation.dateReclamation|date('d M @ H:i') }}
            </div>
            <div>Posts: {{ messages|length }}</div>
            <a href="{{ path('reclamation_new') }}" class="button">Cr√©er une r√©clamation</a>

            <div class="search-bar">
                <input type="text" placeholder="Search this topic">
                <button>üîç</button>
            </div>

            <div class="section">
                <strong>Discussions Rules and Guidelines</strong>
            </div>

            <div class="section">
                <strong>Your Forum Account</strong>
                <a href="#">Post History</a>
            </div>

            <div class="section">
                <strong>More discussions</strong>
                {% set otherReclamations = [] %}
                {% for rec in reclamations %}
                    {% if selectedReclamation is null or rec.id != selectedReclamation.id %}
                        {% set otherReclamations = otherReclamations|merge([rec]) %}
                    {% endif %}
                {% endfor %}
                {# Shuffle and take a slice of 3 random discussions #}
                {% set randomDiscussions = otherReclamations|shuffle|slice(0, 3) %}
                {% for discussion in randomDiscussions %}
                    <a href="{{ path('message_reclamation_index', {'id': discussion.id}) }}" class="discussion-link">
                        {# Limit the description length to 40 characters for display #}
                        {{ discussion.description|length > 40 ? discussion.description|slice(0, 40) ~ '...' : discussion.description }}
                        <span style="float:right;">üí¨ {{ reclamationMessages[(discussion.id ~ '')]|length }}</span>
                    </a>
                {% endfor %}
            </div>
        </div>
        
        
    </div>

    <script>
        var toggleBtn = document.getElementById('toggleMessages');
        if (toggleBtn) {
            toggleBtn.addEventListener('click', function() {
                var container = document.getElementById('messagesContainer');
                if (container.style.display === 'none') {
                    container.style.display = 'block';
                    this.textContent = 'Hide Messages';
                } else {
                    container.style.display = 'none';
                    this.textContent = 'Show Messages';
                }
            });
        }
    </script>
{% endblock %}
