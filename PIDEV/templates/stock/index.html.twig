<table class="table table-striped">
  <thead>
      <tr>
          <th>ID</th>
          <th>Quantité</th>
          <th>Date de mise à jour</th>
          <th>Date d'ajout</th>
          <th>Entrepôt</th>
          <th>Fournisseurs</th>
          <th>Actions</th>
      </tr>
  </thead>
  <tbody>
      {% for stock in stocks %}
          <tr>
              <td>{{ stock.id }}</td>
              <td>{{ stock.quantite }}</td>
              <td>{{ stock.dateMiseAjour|date('d/m/Y') }}</td>
              <td>{{ stock.dateAjout|date('d/m/Y H:i:s') }}</td>
              <td>{{ stock.entrepot.nom }}</td>
              <td>
                  {% for fournisseur in stock.fournisseurs %}
                      {{ fournisseur.nom }}{% if not loop.last %}, {% endif %}
                  {% endfor %}
              </td>
              <td>
                  <a href="{{ path('stock_edit', { id: stock.id }) }}" class="btn btn-warning btn-sm">Modifier</a>
                  <a href="{{ path('stock_delete', { id: stock.id }) }}" class="btn btn-danger btn-sm" 
                     onclick="return confirm('Êtes-vous sûr de vouloir supprimer ce stock ?');">Supprimer</a>
              </td>
          </tr>
      {% endfor %}
  </tbody>
</table>
